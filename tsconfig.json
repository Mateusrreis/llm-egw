{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true
    },
    "lib": [
        "ES2015"
    ],
    "include": [
        "./src"
    ]
}